pipeline 
{
    agent any
    stages
    {
        stage ('checkout the code')
        {
            steps
            {
                git(url: 'https://github.com/diptishegar/Expenses-Tracker-WebApp.git', branch: 'main')
            }
        }
        stage ('Build Image')
        {
            steps
            {
                script {
                    sh "docker build -t expensetrackerwebapp:v2 ."
                }

            }
            }
        
        post {
            success {
               script{ echo 'Image Built Successfully' }
            } failure {
               script{ echo 'Image Build Failed' }
            }
        }
    }
}
